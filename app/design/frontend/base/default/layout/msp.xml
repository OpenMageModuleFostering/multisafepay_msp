<layout version="0.1.0">
    <checkout_onepage_paymentmethod>
        <remove name="right"/>
        <remove name="left"/>
        <remove name="root"/>
        <block type="msp/checkout_onepage_payment_methods" name="msp_payment_method" output="toHtml" template="msp/default.phtml">
            <action method="setMethodFormTemplate"><method>purchaseorder</method><template>payment/form/purchaseorder.phtml</template></action>
        </block>
    </checkout_onepage_paymentmethod>

    <checkout_cart_index>
        <reference name="checkout.cart.top_methods">
            <block type="msp/link" name="checkout.cart.methods.msp.top" template="msp/link.phtml" before="-"/>
        </reference>
        <reference name="checkout.cart.methods">
            <block type="msp/link" name="checkout.cart.methods.msp.bottomText" template="msp/linkText.phtml"/>
            <block type="msp/link" name="checkout.cart.methods.msp.bottom" template="msp/link.phtml"/>
        </reference>
    </checkout_cart_index>

     <sales_order_view>
        <reference name="order_totals">
            <block name="payment_fee" type="msp/paymentFee_order_totals_paymentfee" before="tax"/>
        </reference>
    </sales_order_view>
    
    <sales_order_invoice>
        <reference name="invoice_totals">
            <block name="payment_fee" type="msp/paymentFee_order_invoice_totals_paymentfee" before="tax"/>
        </reference>
    </sales_order_invoice>
    
    <sales_order_creditmemo>
        <reference name="creditmemo_totals">
            <block name="payment_fee" type="msp/paymentFee_order_creditmemo_totals_frontend_paymentfee" before="tax"/>
        </reference>
    </sales_order_creditmemo>
    
    <sales_order_print>
        <reference name="order_totals">
            <block name="payment_fee" type="msp/paymentFee_order_totals_paymentfee" before="tax"/>
        </reference>
    </sales_order_print>
    
    <sales_order_printinvoice>
        <reference name="invoice_totals">
            <block name="payment_fee" type="msp/paymentFee_order_invoice_totals_paymentfee" before="tax"/>
        </reference>
    </sales_order_printinvoice>
    
    <sales_order_printcreditmemo>
        <reference name="creditmemo_totals">
            <block name="payment_fee" type="msp/paymentFee_order_creditmemo_totals_frontend_paymentfee" before="tax"/>
        </reference>
    </sales_order_printcreditmemo>
    
    <sales_email_order_items>
        <reference name="order_totals">
            <block name="payment_fee" type="msp/paymentFee_order_totals_paymentfee" before="tax"/>
        </reference>
    </sales_email_order_items>
    
    <sales_email_order_invoice_items>
        <reference name="invoice_totals">
            <block name="payment_fee" type="msp/paymentFee_order_invoice_totals_paymentfee" before="tax"/>
        </reference>
    </sales_email_order_invoice_items>
    
    <sales_email_order_creditmemo_items>
        <reference name="creditmemo_totals">
            <block name="payment_fee" type="msp/paymentFee_order_creditmemo_totals_frontend_paymentfee" before="tax"/>
        </reference>
    </sales_email_order_creditmemo_items>
</layout>
